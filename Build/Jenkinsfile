pipeline {
    agent {
        dockerfile {
            dir 'Build'
            label 'docker && windows'
        }
    }

    triggers {
        pollSCM 'H/5 * * * *'
    }

    stages {
        stage('Build') {
            steps {
                bat 'Build/Build.cmd unstable'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}
